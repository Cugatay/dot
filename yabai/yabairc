# Set layout
yabai -m config layout bsp

# set mouse interaction modifier key (default: fn)
yabai -m config mouse_modifier alt
# set modifier + left-click drag to move window (default: move)
yabai -m config mouse_action1 move
# set modifier + right-click drag to resize window (default: resize)
yabai -m config mouse_action2 resize

# when focused to another window, mouse goes to center of the focused window
yabai -m config mouse_follows_focus on
# when mouse moves another window, focus goes to the window that mouse is in
yabai -m config focus_follows_mouse autoraise

# Paddings
yabai -m config \
    top_padding       0   \
    bottom_padding    0   \
    left_padding      0   \
    right_padding     0   \
    window_gap        06  \

# Disable specific apps
yabai -m rule --add app="System Settings$" manage=off
yabai -m rule --add app="Pomotroid$" manage=off
yabai -m rule --add app="coconutBattery$" manage=off

